root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[.hs]
indent_style = space
indent_size = 2

[.idr]
indent_style = space
indent_size = 2
